{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "allowJs": true,
    "module": "ESNext",
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
      // "@/assets/*": [
      //   "./assets/*"
      // ],
      // "@/components/*": [
      //   "./components/*"
      // ],
      // "@/constants/*": [
      //   "./constants/*"
      // ],
      // "@/container/*": [
      //   "./container/*"
      // ],
      // "@/features/*": [
      //   "./features/*"
      // ],
      // "@/hooks/*": [
      //   "./hooks/*"
      // ],
      // "@/styles/*": [
      //   "./styles/*"
      // ],
      // "@/utils/*": [
      //   "./utils/*"
      // ],
      // "@/types/*": [
      //   "./types/*"
      // ]
    }
  },
  "include": ["src/**/*", "tests/**/*"],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}